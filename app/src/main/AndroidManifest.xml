<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joule.endahebraling">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisitBanyumas">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.VisitBanyumas.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listcontent.DetailContentActivity"
            android:label="@string/title_activity_detail_destination"
            android:theme="@style/Theme.VisitBanyumas.NoActionBar" />
        <activity
            android:name=".listcontent.ListContentActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".InfoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.accomodation.DetailHotelActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_detail_hotel"
            android:launchMode="singleTop"
            android:theme="@style/Theme.VisitBanyumas.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.VisitBanyumas.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>